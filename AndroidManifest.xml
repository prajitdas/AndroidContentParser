<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prajitdas.parserapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Required permission for reading the privacy policies -->
    <uses-permission android:name="android.permission.sprivacy.READ_WRITE_CONTENT" />    
    <uses-permission android:name="android.permission.sprivacy.READ_POLICIES" />    
	<uses-permission android:name="android.permission.sprivacy.WRITE_POLICIES" />    
    <!-- Required permission only for Android 4.4 and above -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Unusual but true! -->
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".alternate.AlternateMainActivity"
            android:label="@string/title_activity_alternate_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".providerlists.ProvidersMainActivity"
            android:label="@string/title_activity_provider_main" >
        </activity>
        <activity
            android:name=".contentparsers.contacts.ContactsListActivity"
            android:label="@string/activity_contacts_list"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_contacts" />
        </activity>
        <activity
            android:name=".contentparsers.contacts.ContactDetailActivity"
            android:label="@string/activity_contact_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prajitdas.parserapp.contentparsers.contacts.ContactsListActivity" />
        </activity>
        <activity
            android:name=".contentparsers.media.MediaActivity"
            android:label="@string/title_activity_media" >
        </activity>
        <activity
            android:name=".media.VideoActivity"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:name=".contentparsers.media.AudioActivity"
            android:label="@string/title_activity_audio" >
        </activity>
        <activity
            android:name="com.prajitdas.parserapp.contentparsers.media.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
    </application>

</manifest>