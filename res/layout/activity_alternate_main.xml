<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonContactProviderQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:text="@string/buttonContactProviderQueryText" />

    <Button
        android:id="@+id/buttonForListOfProviders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/buttonForListOfProvidersText" />

    <Button
        android:id="@+id/buttonContactProviderLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonContactProviderQuery"
        android:text="@string/buttonContactProviderLoaderText" />

    <ToggleButton
        android:id="@+id/toggleButtonContactsAccess"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonMediaProviderQuery"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonContactProviderQuery"
        android:text="@string/toggleButtonContactAccessText"
        android:textOff="Contacts Access Allowed"
        android:textOn="Contacts Access Prohibited" 
        android:checked="true" />

    <Button
        android:id="@+id/buttonMediaProviderQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonContactProviderLoader"
        android:text="@string/buttonMediaProviderQueryText" />

    <Button
        android:id="@+id/buttonMediaProviderLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonMediaProviderQuery"
        android:text="@string/buttonMediaProviderLoaderText" />

    <ToggleButton
        android:id="@+id/toggleButtonMediaAccess"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonMediaProviderLoader"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonMediaProviderQuery"
        android:text="@string/toggleButtonMediaAccessText"
        android:textOff="Media Access Allowed"
        android:textOn="Media Access Prohibited" 
        android:checked="true" />

</RelativeLayout>